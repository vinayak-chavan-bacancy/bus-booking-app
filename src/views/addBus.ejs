<html>

<head>
    <link rel="stylesheet" href="/css/blogcss.css" />
    <%- include('../views/partials/links'); %>  
   
</head>

<body>

                <!-- header part -->

  <div class="bgimg">
    <nav class="navbar navbar-expand-sm bg-danger nav-dark">
        <div class="container mt-1">
            <h2 class="text-white">Red<b>BUS</b></h2>
            <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse"
                data-target="#collapsenavbar">
                <span class="navbar-toggler-icon "></span>
            </button>

            <div class="collapse navbar-collapse text-center" id="collapsenavbar">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item px-2">
                        <a href="bus" class="nav-link text-white"> HOME </a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/" class="nav-link text-white"> LOGOUT </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>

                    <!-- page content -->

          <div class="container mt-5">
            <h2 class="text-center">Register New Bus Here</h2>
            <div class="d-flex justify-content-center">
                <form class="mt-3 col-md-6" id="addbus" action="/bus" method="post">
                    <div class="form-group">
                        <label for="busnumber">Bus Number</label>
                        <input type="busnumber" class="form-control" id="busnumber" name="busnumber" placeholder="Bus Number" required>
                    </div>
                    <div class="form-group">
                        <label for="busType">Type</label>
                        <select name="busType" class="form-control" id="busType">
                          <option value="seating">Seating</option>
                          <option value="sleeper">Sleeper</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="capacity">Capacity</label>
                        <input type="capacity" class="form-control" id="capacity" name="capacity" placeholder="Capacity" required>
                    </div>
                       
                  <button type="submit" class="btn btn-danger btn-info mt-2">ADD</button>
                  <button class="btn btn-danger mt-2 ml-2" ><a href="/bus" class="text-light"> CANCEL </a></button>

                    </div>
                </form>
            </div>


    <%- include('../views/partials/footer'); %>

</body>

</html>