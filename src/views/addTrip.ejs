<html>

<head>
    <link rel="stylesheet" href="/css/blogcss.css" />
    <%- include('../views/partials/links'); %>  
   
</head>

<body>

                <!-- header part -->

  <div class="bgimg">
    <nav class="navbar navbar-expand-sm bg-danger nav-dark">
        <div class="container mt-1">
            <h2 class="text-white">Red<b>BUS</b></h2>
            <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse"
                data-target="#collapsenavbar">
                <span class="navbar-toggler-icon "></span>
            </button>

            <div class="collapse navbar-collapse text-center" id="collapsenavbar">
                <ul class="navbar-nav ml-auto">
                  <li class="nav-item px-2">
                        <a href="/bus" class="nav-link text-white"> HOME </a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/" class="nav-link text-white"> LOGOUT </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</div>



                    <!-- page content -->
<div class="container mt-4">
    <h2 class="text-center">Add New Trip Here</h2>
        <div class="d-flex justify-content-center">
            <form class="mt-3 col-md-6" id="addtrip" action="/trip" method="post">
                <div class="form-group">
                    <div class="container ">
                        <div class="row mx-md-n2">
                            <div class="col px-md-2">
                                <label for="startingPoint">From</label>
                                <input type="text" class="form-control" id="startingPoint" name="startingPoint" placeholder="From">
                            </div>
                            <div class="col px-2">
                                <label for="destinationPoint">Destination</label>
                                <input type="text" class="form-control" id="destinationPoint" name="destinationPoint" placeholder="Destination">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="container ">
                        <div class="row mx-md-n2">
                            <div class="col px-md-2">
                                <label for="departureTime">Departure Time</label>
                                <input type="time" class="form-control" id="departureTime" name="departureTime">
                            </div>
                            <div class="col px-2">
                                <label for="reachTime">Reach Time</label>
                                <input type="time" class="form-control" id="reachTime" name="reachTime">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="container ">
                        <label for="travelDate">Travel Date</label>
                        <input type="date" class="form-control" id="travelDate" name="travelDate" placeholder="Travel Date">
                    </div>
                </div>
                <div class="form-group">
                    <div class="container ">
                        <label for="fareAmount">Fare Amount</label>
                        <input type="text" class="form-control" id="fareAmount" name="fareAmount" placeholder="Fair Amount">
                    </div>
                </div>
                    
                <div class="form-group">
                    <div class="container ">
                        <input type="submit" class="btn btn-danger btn-info mt-2" value="ADD">
                        <button class="btn btn-danger mt-2 ml-2" ><a href="/bus" class="text-light"> CANCEL </a></button>
                    </div>
                </div>
            </form>
        </div>
</div>

    <%- include('../views/partials/footer'); %>

    <script>
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0');
    var yyyy = today.getFullYear();

    today = yyyy + '-' + mm + '-' + dd;
    $('#travelDate').attr('min',today);
    </script>

</body>

</html>